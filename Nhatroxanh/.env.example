# Copy file này thành .env và điền thông tin thực tế

# Database MySQL
DB_HOST=localhost
DB_PORT=3306
DB_NAME=nhatroxanh_db
DB_USER=nhatroxanh_user
DB_PASSWORD=password123

# JWT Configuration (tạo secret key dài và phức tạp)
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here
JWT_EXPIRATION=86400000

# Email Configuration (để gửi email xác thực, reset password...)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your_email@gmail.com
EMAIL_PASSWORD=your_email_app_password

# File Upload Path
UPLOAD_PATH=./uploads/

# API Keys (nếu project có dùng)
GOOGLE_API_KEY=your_google_api_key
FACEBOOK_CLIENT_ID=your_facebook_client_id
FACEBOOK_CLIENT_SECRET=your_facebook_client_secret